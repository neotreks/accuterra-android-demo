<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/upload_request_list_item_type"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:paddingTop="10dp"
        tools:text="ATTACHMENT"/>

    <TextView
        android:id="@+id/upload_request_list_item_priority"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/upload_request_list_item_type"
        app:layout_constraintEnd_toEndOf="@id/upload_request_list_item_type"
        app:layout_constraintTop_toBottomOf="@id/upload_request_list_item_type"
        android:textAlignment="center"
        tools:text="MEDIUM"/>

    <TextView
        android:id="@+id/upload_request_list_item_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/upload_request_list_item_type"
        app:layout_constraintEnd_toEndOf="@id/upload_request_list_item_type"
        app:layout_constraintTop_toBottomOf="@id/upload_request_list_item_priority"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        tools:text="QUEUED"/>

    <TextView
        android:id="@+id/upload_request_list_item_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/upload_request_list_item_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        tools:text="Full detail..."/>

</androidx.constraintlayout.widget.ConstraintLayout>
