<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/default_margin_internal">

    <!-- LIKES -->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/activity_feed_online_trip_ugc_footer_likes_envelope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/default_margin"
        android:gravity="center_vertical">

        <!-- LIKES ICON -->
        <ImageView
            android:id="@+id/activity_feed_online_trip_ugc_footer_likes_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumb_up_alt_black_24dp"/>

        <!-- LIKES TEXT -->
        <TextView
            android:id="@+id/activity_feed_online_trip_ugc_footer_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="9 Likes"
            android:layout_marginStart="@dimen/default_margin_internal"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- COMMENTS -->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- COMMENTS ICON -->
        <ImageView
            android:id="@+id/activity_feed_online_trip_ugc_footer_comments_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_24dp"/>

        <!-- COMMENTS TEXT -->
        <TextView
            android:id="@+id/activity_feed_online_trip_ugc_footer_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="6 Comments"
            android:layout_marginStart="@dimen/default_margin_internal"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- PHOTOS -->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/default_margin"
        android:gravity="center_vertical">

        <!-- PHOTOS ICON -->
        <ImageView
            android:id="@+id/activity_feed_online_trip_ugc_footer_photos_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_collections_black_24dp"/>

        <!-- PHOTOS TEXT -->
        <TextView
            android:id="@+id/activity_feed_online_trip_ugc_footer_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13 Photos"
            android:layout_marginStart="@dimen/default_margin_internal"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/activity_feed_online_trip_ugc_footer_likes_envelope"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/shadow_bottom"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>