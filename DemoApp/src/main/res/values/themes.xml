<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionAndStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <!-- ActionBar style -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.ActionBar" parent="@style/AppTheme.AppBarOverlay">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/toolbarText</item>
    </style>

    <style name="AppTheme.ToolbarPopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />"

    <!-- Toolbar -->

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.Toolbar" parent="">
        <item name="colorPrimary">@color/toolbarText</item>
        <item name="colorPrimaryVariant">@color/toolbarTextGrayed</item>
        <item name="colorOnPrimary">@color/toolbarText</item>
    </style>

</resources>