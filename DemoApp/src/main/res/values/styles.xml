<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionAndStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <!-- ActionBar style -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ActionBar" parent="@style/AppTheme.AppBarOverlay">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/toolbarText</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RibbonAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/background_ripple</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RibbonActionIcon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:tint">@android:color/holo_blue_light</item>
    </style>

    <style name="RibbonActionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextOnPrimaryColor">
        <item name="android:textColor">@color/toolbarText</item>
    </style>

    <style name="ToolbarTitle" parent="TextOnPrimaryColor">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextLink">
        <item name="android:textColor">@color/primaryTextLink</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ColoredTextOnWhiteBackground">
        <item name="android:textColor">@color/primaryTextLink</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextGrayedHint">
        <item name="android:textColor">@color/primaryTextGrayed</item>
    </style>

    <!-- Custom General Screen Components -->

    <style name="DemoAppText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DemoAppLink" parent="DemoAppText">
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="DemoAppTitle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- User Rating Component -->
    <style name="UserRatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/colorUserRatingStarForeground</item>
    </style>

</resources>
