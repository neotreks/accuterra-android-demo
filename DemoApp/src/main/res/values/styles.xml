<resources>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RibbonAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/background_ripple</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RibbonActionIcon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:tint">@android:color/holo_blue_light</item>
    </style>

    <style name="RibbonActionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextOnPrimaryColor">
        <item name="android:textColor">@color/toolbarText</item>
    </style>

    <style name="ToolbarTitle" parent="TextOnPrimaryColor">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextTitle">
        <item name="android:textColor">@color/primaryTextLink</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ColoredTextOnWhiteBackground">
        <item name="android:textColor">@color/primaryTextLink</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextGrayedHint">
        <item name="android:textColor">@color/primaryTextGrayed</item>
    </style>

    <!-- Custom General Screen Components -->

    <style name="DemoAppText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DemoAppLink" parent="DemoAppText">
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="DemoAppTitle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TODO: Change background to gray and text to black -->
    <style name="DemoApp.Button.Grayed" parent="Widget.MaterialComponents.Button">

    </style>

    <!-- User Rating Component -->
    <style name="UserRatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/colorUserRatingStarForeground</item>
    </style>

    <style name="ActivityNewOfflineMapDownloadButton">
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:height">20dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ActivityProfile_Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorListText</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">@dimen/default_margin</item>
    </style>

</resources>
